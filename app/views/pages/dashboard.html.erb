<%# here starts the calendar %>
  <div class="container">
    <%= month_calendar do |date, posts| %>
      <%= date %>
      <% posts.each do |post| %>
        <div>
          <p><%= post.challenge %></p>
        </div>
      <% end %>
    <% end %>
  </div>

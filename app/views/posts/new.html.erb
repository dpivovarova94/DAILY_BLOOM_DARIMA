<%# here STARTS the FORMS feature %>
  <!-- Camera open form-->
  <div class="option1 m-5">
    <%= simple_form_for [@challenge, @post] do |f| %>
      <%# generate input type file
      also input type hidden name="medium" value="photo" %>
      <%= f.input :photo, as: :file, label: "Open camera",
      label_html: {class:"btn-camera"},
      input_html: {accept: "image/*",
       capture:"environment",
        id:"cameraFileInput"}%>
      <%= f.button :submit, 'Submit'%>
    <% end %>
  </div>

  <!-- Poem open form-->
  <div class="option2 m-5">
    <%= simple_form_for [@challenge, @post], html: { class: 'form-inline' } do |f| %>
      <div class="mb-3 text optional post_poem">
        <%= f.input :poem, class:"form-control text optional", label: "Poem",type:"text", placeholder:"Share your Poem", name:"post[poem]", id:"post_poem" %>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    <% end %>
  </div>

  <!-- Quote open form-->
  <div class="option3 m-5">
    <%= simple_form_for [@challenge, @post], html: { class: 'form-inline' } do |f| %>
      <div class="mb-3 text optional post_quote">
        <%= f.input :text, class: "form-control text optional", label: "Quote",placeholder: "Share your Quote of the day", name: "post[quote]", id: "post_quote" %>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    <% end %>
  </div>

  <!-- Song open form-->
  <div class="option4 m-5">
    <%= simple_form_for [@challenge, @post], html: { class: 'form-inline' } do |f| %>
      <div class="mb-3 text optional post_song">
        <%# upload your song here %>
        <%= f.input :song_url, class: 'form-control text optional', label: "Song", placeholder: 'Upload your Song', id: 'post_song' %>
      </div>
      <%# preview of the uploaded link here %>
      <div id="cover_preview"></div>
      <button type="submit" class="btn btn-primary">Submit</button>
    <% end %>
  </div>
</section>



